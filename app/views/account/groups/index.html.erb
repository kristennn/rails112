<div class="col-md-12">
<h2 class="text-center">加入的讨论版</h2>

<table class="table">
  <tr>
    <td>#</td>
    <td>Title</td>
    <td>Description</td>
    <td>Post Count</td>
    <td>Last Update</td>
  </tr>

  <% @groups.each do |group| %>
    <tr>
      <td>#</td>
      <td><%= link_to(group.title, group_path(group)) %></td>
      <td><%= group.description %></td>
      <td><%= group.posts.count %></td>
      <td><%= group.updated_at %></td>
    </tr>
  <% end %>

</table>

</div>
